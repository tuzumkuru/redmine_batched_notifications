<% if @journals.map(&:user).uniq.length == 1 %>
<%= l(:text_issue_updated, :id => "##{@issue.id}", :author => @journals.first.user) %>
<% else %>
<%= l(:text_issue_updated_multiple, :id => "##{@issue.id}") %>
<% end %>

<% @journals.each do |journal| %>
<%= "(#{l(:field_private_notes)}) " if journal.private_notes? -%>
<% details_to_strings(journal.visible_details, true).each do |string| -%>
<%= string %>
<% end -%>

<% if journal.notes? -%>
<%= journal.notes %>

<% end -%>
----------------------------------------
<% end %>
<%= render :partial => 'issue', :formats => [:text], :locals => { :issue => @issue, :user => @user, :issue_url => @issue_url } %>
