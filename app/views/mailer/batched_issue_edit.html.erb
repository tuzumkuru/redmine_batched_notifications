<%# This template renders a batched notification email for a single user's changes to an issue. %>
<%= l(:text_issue_updated, :id => link_to("##{@issue.id}", @issue_url), :author => h(@author)).html_safe %>
<hr />

<% @journals.each do |journal| %>
  <% if journal.private_notes? %>
    (<%= l(:field_private_notes) %>)
  <% end %>
  <ul class="journal details">
  <% details_to_strings(journal.visible_details(@user), false, :only_path => false).each do |string| %>
    <li><%= string %></li>
  <% end %>
  </ul>

  <%= textilizable(journal, :notes, :only_path => false) %>
  <hr />
<% end %>
<%= render :partial => 'issue', :formats => [:html], :locals => { :issue => @issue, :user => @user, :issue_url => @issue_url } %>
